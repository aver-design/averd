{
  "name": "averd",
  "version": "0.0.1",
  "description": "A version of design",
  "author": "GuessEver <guessever@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/aver-design/averd.git",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "gulp",
    "preview": "cross-env NODE_ENV=development bisheng start -c ./preview/bisheng.config.js",
    "preview:build": "cross-env NODE_ENV=production bisheng build -c ./preview/bisheng.config.js",
    "test": "jest",
    "lint": "npm run lint:es && npm run lint:preview && npm run lint:style",
    "lint:es": "eslint --ext .ts,.tsx ./components",
    "lint:preview": "eslint --ext .js,.jsx ./preview",
    "lint:style": "stylelint --syntax=less '{components,preview}/**/*.less'",
    "lint-fix": "npm run lint-fix:es && npm run lint-fix:preview && npm run lint-fix:style",
    "lint-fix:es": "npm run lint:es -- --fix",
    "lint-fix:preview": "npm run lint:preview -- --fix",
    "lint-fix:style": "npm run lint:style -- --fix"
  },
  "browserslist": [
    "last 2 version",
    "Firefox ESR",
    "> 1%",
    "ie >= 9",
    "iOS >= 8",
    "Android >= 4"
  ],
  "lint-staged": {
    "components/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "preview/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "{components,preview}/**/*.less": [
      "stylelint --syntax=less --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/classnames": "^2.2.9",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.25",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "babel-plugin-import": "^1.13.0",
    "bisheng": "^1.4.6",
    "bisheng-plugin-react": "^1.1.1",
    "bisheng-plugin-toc": "^0.4.4",
    "cross-env": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0-beta.2",
    "gulp-clean": "^0.4.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "less": "^3.10.3",
    "lint-staged": "^9.5.0",
    "merge2": "^1.3.0",
    "prettier": "1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "stylelint": "^12.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "typescript": "^3.7.4"
  }
}
